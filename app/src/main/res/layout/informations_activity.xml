<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="#1E7D1E"> <!-- Fond vert -->

    <!-- Bouton de retour en haut (aligné à gauche) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnRetour"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_media_previous"
            android:background="@android:color/transparent"
            android:elevation="10dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:contentDescription="Retour"
            app:tint="@android:color/white"/>
    </RelativeLayout>

    <!-- Titre -->
    <TextView
        android:id="@+id/titleInformations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mes Informations"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"/>

    <!-- Cadre Étudiant -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/neumorphic_white"
        android:elevation="10dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👨‍🎓 Étudiant"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1E7D1E"
            android:layout_marginBottom="10dp"/>

        <TextView android:id="@+id/txtNomEtudiant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom : ..."
            android:textColor="#1E7D1E"/>

        <TextView android:id="@+id/txtPrenomEtudiant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prénom : ..."
            android:textColor="#1E7D1E"/>

        <TextView android:id="@+id/txtEmailEtudiant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email : ..."
            android:textColor="#1E7D1E"/>

        <TextView android:id="@+id/txtTelEtudiant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Téléphone : ..."
            android:textColor="#1E7D1E"/>

        <TextView android:id="@+id/txtAdresseEtudiant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adresse : ..."
            android:textColor="#1E7D1E"/>

        <TextView android:id="@+id/txtVilleEtudiant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ville : ..."
            android:textColor="#1E7D1E"/>

        <TextView android:id="@+id/txtCodePostalEtudiant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code Postal : ..."
            android:textColor="#1E7D1E"/>
    </LinearLayout>

    <!-- Cadre Entreprise -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/neumorphic_white"
        android:elevation="10dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🏢 Entreprise"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1E7D1E"
            android:layout_marginBottom="10dp"/>

        <TextView android:id="@+id/txtNomEntreprise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom de l'entreprise : ..."
            android:textColor="#1E7D1E"/>

        <TextView android:id="@+id/txtMaitreApprentissage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maître d'apprentissage : ..."
            android:textColor="#1E7D1E"/>

        <TextView android:id="@+id/txtPreMaitreApprentissage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prénom maître d'apprentissage : ..."
            android:textColor="#1E7D1E"/>
    </LinearLayout>

    <!-- Cadre École -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/neumorphic_white"
        android:elevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🏫 École"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1E7D1E"
            android:layout_marginBottom="10dp"/>

        <TextView android:id="@+id/txtNomEcole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom de l'école : ..."
            android:textColor="#1E7D1E"/>

        <TextView android:id="@+id/txtTuteurEcole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuteur : ..."
            android:textColor="#1E7D1E"/>
    </LinearLayout>

</LinearLayout>
